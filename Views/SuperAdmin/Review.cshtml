
@model Myblog.ViewModel.BlogFormModel

@{
    ViewData["Title"] = "Review Blog";
    Layout = "~/Views/Shared/_SuperAdminLayout.cshtml";
}

<h2>Review Blog</h2>

<div class="card">
    <div class="card-body">
        <h3>@Model.Title</h3>
        <p><strong>Author:</strong> @Model.Author.FullName</p>
        <p><strong>AuthorId:</strong> @Model.Author.Email</p>
        <p><strong>Created At:</strong> @Model.CreatedAt.ToString("yyyy-MM-dd HH:mm")</p>
        <p><strong>Content:</strong> @Model.Content</p>

        <form method="post">
            <input type="hidden" name="id" value="@Model.Id" />

            <!-- Rejection Section -->
            <div class="mb-3">
                <label for="RejectionReason">Rejection Reason:</label>
                <textarea name="rejectionReason" class="form-control" rows="3" ></textarea>
            </div>

            <!-- Button Group in One Line -->
            <div class="d-flex gap-2">
                <button type="submit" asp-action="Approve" class="btn btn-success">Approve</button>
                <button type="submit" asp-action="Reject" class="btn btn-danger">Reject</button>
                <a asp-action="SuperAdminIndex" class="btn btn-secondary">Back</a>
            </div>
        </form>
    </div>
</div>
