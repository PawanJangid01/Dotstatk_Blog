@using Microsoft.AspNetCore.Identity;
@inject SignInManager<ApplicationUser> signInManager


<ul class="navbar-nav">
@if (signInManager.IsSignedIn(User))
{
    if(User.IsInRole("admin"))
    {
            <li class="nav-item dropdown ">
                <a class="nav-link dropdown-toggle text-dark" href=" #" role="button" data-bs-toggle="dropdown" aira-expanded=" ">
                    Admin
                </a>
                <ul class="dropdown-menu">
                    <li><a class="dropdown-item"  asp-controller="Admin" asp-action="AdminIndex">Profile</a></li>
                    <li><hr class="dropdown-divider"></li>
                    <li><a class="dropdown-item" asp-controller="Account" asp-action="Logout">Logout</a></li>
                </ul>
            </li>
    }
    else if (User.IsInRole("superadmin"))
    {
            <li class="nav-item dropdown ">
                <a class="nav-link dropdown-toggle text-dark" href=" #" role="button" data-bs-toggle="dropdown" aira-expanded=" ">
                    SuperAdmin
                </a>
                <ul class="dropdown-menu">
                    <li><a class="dropdown-item"  asp-controller="SuperAdmin" asp-action="SuperAdminIndex">Profile</a></li>
                    <li><hr class="dropdown-divider"></li>
                    <li><a class="dropdown-item" asp-controller="Account" asp-action="Logout">Logout</a> </li>
                </ul>
            </li>
    }
 }
else
{
    <li class="nav-item">
            <a class="nav-link text-dark" id="register" asp-controller="Account" asp-action="Register">Register</a>
    </li>
    <li class="nav-item">
            <a class="nav-link text-dark" id="login"  asp-controller="Account" asp-action="Login">Login</a>
    </li>
}
</ul>
