 @model IEnumerable<Myblog.ViewModel.BlogFormModel>

@{
    ViewData["Title"] = "My Blogs";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>My Blogs</h2>
<a asp-action="Create" class="btn btn-primary">Create New Blog</a>

<table class="table mt-3">
    <thead>
        <tr>
            <th>Title</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var blog in Model)
        {
            <tr>
                <td>@blog.Title</td>
                <td>
                    <span class="badge @(blog.Status == "Approved" ? "bg-success" :
                                         blog.Status == "Rejected" ? "bg-danger" :
                                         blog.Status == "Draft" ? "bg-secondary" :
                                         "bg-warning")">
                        @blog.Status
                    </span>
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@blog.Id" class="btn btn-info btn-sm">View</a>
                    <a asp-action="Delete" asp-route-id="@blog.Id" class="btn btn-info btn-sm">Delete</a>

                    @if (blog.Status == "Draft" || blog.Status == "Rejected")
                    {
                    <a asp-action="Edit" asp-route-id="@blog.Id" class="btn btn-warning btn-sm">Edit & Resubmit</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
