@model IEnumerable<Myblog.ViewModel.BlogFormModel>

@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-4">Latest Blogs</h2>

@if (!Model.Any())
{
    <p>No blogs available.</p>
}
else
{
    <div class="row">
        @foreach (var blog in Model)
        {
            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">@blog.Title</h4>
                       @*  <h6 class="text-muted">By @blog.Author on @blog.CreatedAt.ToString("yyyy-MM-dd HH:mm")</h6> *@
                         <h6 class="text-muted">By @blog.Author on @blog.CreatedAt</h6> 
                        <p>@(blog.Content.Length > 150 ? blog.Content.Substring(0, 150) + "..." : blog.Content)</p>
                        <a asp-controller="Home" asp-action="Details" asp-route-id="@blog.Id" class="btn btn-primary btn-sm">
                            Read More
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
}
