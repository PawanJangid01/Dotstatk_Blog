@model Myblog.ViewModel.BlogFormModel


@{
    ViewData["Title"] = Model.Title;
}

<div class="card">
    <div class="card-body">
        <h2>@Model.Title</h2>
        <h6 class="text-muted">By @Model.Author on @Model.CreatedAt.ToString("yyyy-MM-dd")</h6>
        <h6 class="text-muted">Autho @Model.Author Name @Model.AuthorId</h6>
        <hr>
        <p>@Model.Content</p>
    </div>
</div>

<a asp-action="Index" class="btn btn-secondary mt-3">Back to Blogs</a>
